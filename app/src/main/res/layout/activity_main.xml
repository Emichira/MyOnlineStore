<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="ke.co.emichira.myonlinestore.ui.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/homepage"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Twirls Marketplace"
        android:textColor="@color/colorPrimaryText"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appNameTextView"
        android:text="sells products at affordable prices."
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="30sp" />

    <Button
        android:id="@+id/findCategoriesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:text="Find Products"
        android:textColor="@color/colorTextIcons"
        android:textStyle="bold" />

    <!--<Button-->
        <!--android:id="@+id/signInButton"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@color/colorAccent"-->
        <!--android:text="Sign In"-->
        <!--android:textColor="@color/colorTextIcons"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_marginBottom="18dp"-->
        <!--android:layout_above="@+id/savedCategoriesButton"-->
        <!--android:layout_centerHorizontal="true" />-->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Saved Products"
        android:id="@+id/savedCategoriesButton"
        android:background="@color/colorAccent"
        android:textColor="@color/colorTextIcons"
        android:visibility="visible"
        android:layout_above="@+id/findCategoriesButton"
        android:layout_marginBottom="20dp"
        android:layout_alignLeft="@+id/appNameTextView"
        android:layout_alignStart="@+id/appNameTextView"
        android:layout_alignRight="@+id/appNameTextView"
        android:layout_alignEnd="@+id/appNameTextView" />

</RelativeLayout>